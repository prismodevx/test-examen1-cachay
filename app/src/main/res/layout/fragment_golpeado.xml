<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GolpeadoFragment">

    <TextView
        android:id="@+id/txt_usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="60sp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txt_numero_jugadores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NÃºmero de Jugadores: "
        android:textSize="18sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/txt_usuario"/>

    <Button
        android:id="@+id/btn_generar_cartas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generar cartas"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/txt_numero_jugadores"/>

    <ScrollView
        android:id="@+id/scv_asignaciones"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/btn_generar_cartas"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:id="@+id/lin_lay_asignaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
