<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondFragment">

    <TextView
        android:id="@+id/txt_usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="60sp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/edt_intento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingresa un nÃºmero (1-100)"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/txt_usuario"/>

    <Button
        android:id="@+id/btn_enviar_intento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar intento"
        app:layout_constraintTop_toBottomOf="@id/edt_intento"/>

    <TextView
        android:id="@+id/txt_resultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:padding="12dp"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/white"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/btn_enviar_intento"
        android:layout_marginTop="40dp"
        />
    <TextView
        android:id="@+id/txt_intentos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Intentos anteriores: "
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/txt_resultado"/>

    <Button
        android:id="@+id/btn_reiniciar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reiniciar"
        android:layout_marginTop="32dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/txt_intentos"/>
</androidx.constraintlayout.widget.ConstraintLayout>